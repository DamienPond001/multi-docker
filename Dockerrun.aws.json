{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions": [
        {
            "name" : "client",
            "image" : "damienpond/multi-client",
            "hostname": "client",
            "essential" : false
        },
        {
            "name" : "server",
            "image": "damienpond/multi-server",
            "hostname" : "api",
            "essential" : false
        },
        {
            "name": "worker",
            "image" : "damienpond/multi-worker",
            "hostname" : "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "damienpond/multi-nginx",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort":80,
                    "containerPort":80
                }

            ],
            "links":["client", "server"]
        }
    ]
}